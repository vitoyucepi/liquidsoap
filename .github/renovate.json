{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "matchDepNames": ["mknejp/delete-release-assets"],
      "overrideDatasource": "git-refs",
      "overridePackageName": "https://github.com/mknejp/delete-release-assets"
    },
    {
      "matchDepNames": ["savonet/aws-s3-docker-action"],
      "overrideDatasource": "git-refs",
      "overridePackageName": "https://github.com/savonet/aws-s3-docker-action"
    },
    {
      "matchDepNames": ["savonet/latest-tag"],
      "overrideDatasource": "git-refs",
      "overridePackageName": "https://github.com/savonet/latest-tag"
    },
    {
      "matchDatasources": ["docker"],
      "enabled": false
    }
  ]
}
